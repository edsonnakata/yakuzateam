<div class="login-page">
  <div class="form">
    <div style="align: center" align="center">
      <h2>Novo Registro</h2>
    </div>
    <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

      <div style="margin-right: 50%">
        <%= f.label :email %>
      </div>

  <div class="field" align="center">
    <%#= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

      <div style="margin-right: 50%">
        <%= f.label :nome , "Nick"%>
      </div>

      <div class="field" align="center">
        <%#= f.label :nome , "Nick"%>
        <%= f.text_field :nome%>
      </div>

      <div style="margin-right: 50%">
        <%= f.label :password , "Senha"%>
      </div>

  <div class="field" align="center">
    <%#= f.label :password , "Senha"%>
    <%# if @minimum_password_length %>
<!--    <em>(<%#= @minimum_password_length %> characters minimum)</em>-->
<!--    <%# end %><br />-->
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "No mÃ­nimo #{@minimum_password_length} caracteres  " %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation , hidden: true %>
    <br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirmar senha" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar" , class: "btn btn-primary"%>
  </div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>