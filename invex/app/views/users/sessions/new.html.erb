  body {
    background: #1a1026;
    background: -webkit-linear-gradient(right, #1a1026, #1a1026);
    background: -moz-linear-gradient(right, #1a1026, #1a1026);
    background: -o-linear-gradient(right, #1a1026, #1a1026);
    background: linear-gradient(to left, #1a1026, #1a1026);
    font-family: "Roboto", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }


</style>



<div class="login-page">
  <div class="form">
<div style="align: center" align="center">
<h1>InvEX</h1>
</div>
  <br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" align="center">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field" align="center">
    <%= f.label :password , "Senha"%>
    <%= f.password_field :password, autocomplete: "current-password"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field" style="margin-left: 49%;">
      <%= f.check_box :remember_me%>
      <%= f.label :remember_me, "Lembrar de mim" %>
    </div>
  <% end %>


  <div class="actions">
    <%= f.submit "Fazer login" , class: "btn btn-primary btn-lg"%>
  </div>
<% end %>
    <br>

     <%= render "users/shared/links" %>
</div>
</div>